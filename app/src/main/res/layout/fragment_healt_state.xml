<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealtStateFragment"
    >

    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="90dp"
        android:text="DEVICE INFORMATIONS"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/hearthParamsTitle"
        android:layout_width="90dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:layout_marginRight="70dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="BPM" />

    <TextView
        android:id="@+id/heartStatusTitle"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="57dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="STATUS:" />

    <TextView
        android:id="@+id/hearthParamsStatus"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="120dp"
        android:textSize="24sp"
        android:textColor="@color/greenButtonColor"
        android:text="OK" />
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/hearthParamsTV"
        android:layout_width="196dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:textSize="48sp"
        tools:text="60 BPM"
        android:textColor="@color/greenButtonColor"
        />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/ecgImg"
        android:layout_width="33dp"
        android:layout_height="26dp"
        android:src="@drawable/heart"
        android:layout_gravity="center"
        android:layout_marginRight="140dp"
        android:layout_marginTop="70dp"
        />

    <FrameLayout
        android:id="@+id/heartLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginRight="110dp">

    </FrameLayout>


</FrameLayout>