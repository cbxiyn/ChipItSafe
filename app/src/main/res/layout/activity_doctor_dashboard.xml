<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".doctor.DoctorDashboard">


    <TextView
        android:id="@+id/hearthParamsTV2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:visibility="visible"
        android:layout_weight="5"
        android:textSize="35sp"
        tools:text="130 BPM"
        android:textColor="@color/redButtonColor"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="@string/emergency_questions_first_time" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_chest" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_faint" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_medicine" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_alone" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_sweating" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/answer_questions_breath" />
</LinearLayout>